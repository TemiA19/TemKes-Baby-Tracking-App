<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".BottleDB">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/yellow_white">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">

                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="15dp"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/green" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30sdp"
                android:text="Bottle Feeding"
                android:textAllCaps="true"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/start_button"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="false"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:text="Click To input Date"
                android:textSize="@dimen/_17sdp"
                app:backgroundTint="#07B6A5" />

            <EditText
                android:id="@+id/date_and_time"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rectangle"
                android:ems="10"
                android:hint="Date and Time"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:text="" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/wakeup"
                android:textColor="@color/teal_green"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <EditText
                android:id="@+id/amt_in_oz"
                android:layout_width="169dp"
                android:layout_height="40dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="-30dp"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:hint="amount ie. 12oz"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:textAlignment="viewStart"
                android:textColor="@color/teal_green"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/bottle_feeding_notes"
                android:layout_width="336dp"
                android:layout_height="175dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rectanglebigger2"
                android:ems="10"
                android:gravity="start"
                android:hint="@string/notes"
                android:inputType="textCapSentences"
                android:imeOptions="actionDone"
                android:padding="5dp"
                android:textAlignment="textStart"
                android:textColor="@color/green" />

            <Button
                android:id="@+id/save_button"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="false"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                app:backgroundTint="#07B6A5"
                android:text="save"
                android:textSize="@dimen/_25sdp"/>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>